{
    "openapi": "3.0.0",
    "info": {
        "title": "Laravel Common Starter",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost/laravel-common-starter/public/api/v1",
            "description": "Common Starter"
        }
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Sign in",
                "description": "Login by email, password",
                "operationId": "authLogin",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "iroid.test1@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Wrong credentials response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Sorry, wrong email address or password. Please try again"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Register user",
                "requestBody": {
                    "description": "",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "email",
                                    "first_name",
                                    "last_name",
                                    "password",
                                    "password_confirmation",
                                    "profile_pic"
                                ],
                                "properties": {
                                    "first_name": {
                                        "description": "first name must be atleast 4chars",
                                        "type": "string",
                                        "minimum": "4",
                                        "example": "iRoid"
                                    },
                                    "last_name": {
                                        "description": "last name must be atleast 4chars",
                                        "type": "string",
                                        "minimum": "4",
                                        "example": "testing"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "iroid.test1@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "minimum": "8",
                                        "example": "password"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "minimum": "8",
                                        "example": "password"
                                    },
                                    "time_zone": {
                                        "type": "string",
                                        "example": "Asia/Kolkata"
                                    },
                                    "profile_pic": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sign up successfully",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": []
            }
        },
        "/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User logout",
                "requestBody": {
                    "description": "",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "device_id"
                                ],
                                "properties": {
                                    "device_id": {
                                        "type": "string",
                                        "example": "7e2848ed2efc7d22170dc6948fe718b5d7dae11c"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Logout successfuly",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "422": {
                        "description": "Invalid Request params",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/refresh-token": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Refresh Token",
                "requestBody": {
                    "description": "",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "refresh_token": {
                                        "type": "string",
                                        "example": ""
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Refresh token generated successfully",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "401": {
                        "description": "Token is either expired or revoked. In such cases, redirect the user to login screen",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/user": {
            "get": {
                "tags": [
                    "Common"
                ],
                "summary": "Get user profile",
                "responses": {
                    "200": {
                        "description": "Profile retreived successfully",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/user/update": {
            "post": {
                "tags": [
                    "Common"
                ],
                "summary": "Update profile info",
                "requestBody": {
                    "description": "",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "first_name",
                                    "last_name",
                                    "profile_pic"
                                ],
                                "properties": {
                                    "first_name": {
                                        "description": "first name must be atleast 4chars",
                                        "type": "string",
                                        "minimum": "4",
                                        "example": "iRoid"
                                    },
                                    "last_name": {
                                        "description": "last name must be atleast 4chars",
                                        "type": "string",
                                        "minimum": "4",
                                        "example": "testing"
                                    },
                                    "time_zone": {
                                        "type": "string",
                                        "example": "Asia/Kolkata"
                                    },
                                    "profile_pic": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sign up successfully",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "security": [
        []
    ]
}